@model IEnumerable<BelibaHoma.BLL.Models.TutorModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles
{
    @Styles.Render("~/bundles/datatable/css")
}


@section scripts
{
    @Scripts.Render("~/bundles/datatable/js")
    <script src="~/Scripts/tutor-index.js"></script>
}

<h2>חונכים</h2>

<p>
    @Html.ActionLink("הוסף חונך", "Create", "Tutor", new { Area = "Rackaz" }, new object { })
</p>
<input type="hidden" id="column-value" value="@(ViewBag.IsRackaz ? 5 : 6)" />
<table class="table" id="tutor-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.IdNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcademicInstitution.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            @{
                if (ViewBag.IsRackaz != true)
                {
                    <th id="is-area">
                        @Html.DisplayNameFor(model => model.User.Area)
                    </th>
                }
            }
            <th id="is-active">
                @Html.DisplayNameFor(model => model.User.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.IdNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcademicInstitution.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            @{
                if (ViewBag.IsRackaz != true)
                {
                    <th>
                        @Html.DisplayNameFor(model => model.User.Area)
                    </th>
                }
            }
            <th>
                @Html.DisplayNameFor(model => model.User.IsActive)
            </th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.IdNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcademicInstitution.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                @{
            if (ViewBag.IsRackaz != true && item.User.Area != null)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.User.Area)
                </td>
            }
                }
                <td>
                    @{
            if (item.User.IsActive == true)
            {
                @String.Format("פעיל");
            }
            else
            {
                @String.Format("לא פעיל");
            }
                    }
                </td>
                <td>
                    @Html.ActionLink("ערוך פרטי חונך", "Edit", new { Area = "Rackaz", id = item.User.Id }) |
                    @Html.ActionLink("פרטים", "Details", new { Area = "Tutor", id = item.User.Id })
                </td>
            </tr>
        }
    </tbody>

</table>