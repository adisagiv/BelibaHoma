@model BelibaHoma.Areas.Rackaz.Models.TutorTraineeViewModel
@{
    Layout = null;
}

@section styles {
    <link href="~/Content/Site.css" rel="stylesheet" />
}


    <script src="~/Scripts/ManualMatchAreaSelected.js"></script>
    <div class="form-horizontal" style="direction: rtl">
        <br>
            <table class="table col-md-6">
                <tbody>
                <tr>
                    <td class="table-danger">
                        @*@Html.ActionLink("להצגת קשרי חונכות", "", "", new { Area = "Rackaz" })*@
                        <a class="btn btn-danger btn-sm" href="/Rackaz/TutorTrainee/Index">להצגת קשרי חונכות</a>
                        משתמשים הצבועים באדום הם בעלי קשרי חניכה פעילים במערכת
                    </td>
                </tr>
                <tr>
                    <td class="table-warning">
                        @*@Html.ActionLink("להצגת המלצות לציוות", "ApproveMatches", "TutorTrainee", new { Area = "Rackaz" })*@
                        <a class="btn btn-warning btn-sm" href="/Rackaz/TutorTrainee/ApproveMatches">להצגת המלצות לציוות</a>
                        משתמשים הצבועים בצהוב הם בעלי המלצה קיימת לציוות
                    </td>
                </tr>
                </tbody>
            </table>
        <div class="panel panel-default col-md-6 panel-height-match">
            <div class="panel-heading">
                <div class="checkbox">
                    <label><input type="checkbox" value="" id="show-matched-trainees">הצג חניכים בעלי שיבוץ</label>
                </div>
            </div>
            <div id="trainees-partial" class="panel-body">
                @Html.Partial("ManualMatchTraineeSelect", Model.Trainees)
            </div>
        </div>
        <div class="panel panel-default col-md-6 panel-height-match">
            <div class="panel-heading">
                <div class="checkbox">
                    <label><input type="checkbox" value="" id="show-matched-tutors">הצג חונכים בעלי שיבוץ</label>
                </div>
            </div>
            <div id="tutors-partial" class="panel-body">
                @Html.Partial("ManualMatchTutorSelect", Model.Tutors)
            </div>
        </div>
        </div>
            
            <div class="form-group">
                <div class="col-md-offset-6 col-md-6">
                    <br/>
                    <br/>
                    <input type="submit" value="בצע ציוות" class="btn btn-info" id="manual-match-submit"style="margin-top: 30px; height: 50px" width="70px"/>
                </div>
            </div>

