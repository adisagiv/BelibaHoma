@using BelibaHoma.BLL.Enums
@model BelibaHoma.Areas.Rackaz.Models.JobOfferViewModel

@{
    Layout = null; 
    var isRackaz = ViewBag.IsRackaz; //change to addministrator aswell later on
    var jobOffer = Model.JobOffer;
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

        <div class="form-horizontal" style="direction: rtl">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2">כותרת המשרה:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.JobOffer.JobTitle, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.JobOffer.JobTitle, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">אזור :</label>
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.JobOffer.JobArea, new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.JobOffer.JobArea, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">דרישות המשרה : </label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.JobOffer.Requirements, new { @cols = "200", @rows = "8", htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.JobOffer.Requirements, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">תיאור המשרה : </label>
