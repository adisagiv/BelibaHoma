@using BelibaHoma.BLL.Enums
@using Extensions.Enums
@model BelibaHoma.BLL.Models.TutorModel

@{
    ViewBag.Title = "פרטי חונך";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="well">
    <h2><b>פרטי החונך</b></h2>
<div>
    <hr/>
    @{
        if (ViewBag.IsTutor == false)
        {
            var id = Model.UserId;
            var action = "Edit/" + id;
            <a class="btn btn-info" href="/Rackaz/Tutor/index">לרשימת החונכים</a>
            @Html.Raw("|")
            <a class="btn btn-default" href="/Rackaz/Tutor/@action">עריכה</a>

        }
    }
</div>
    <br/>
    @{

        if (Model.TutorHours == 0)
        {
            <div class="panel panel-danger" style="background-color:#f2dede">
                <center>
                    <h4 style="color: brown">עד כה נרשמו עבור @Model.FullName <b>@String.Format("{0:F2}",Model.TutorHours)</b> שעות חניכה</h4>
                </center>
            </div>
        }
        else
        {
            <div class="panel panel-success" style="background-color: #e6ffe6">
                <center>
                    <h4 style="color: darkgreen">עד כה נרשמו עבור @Model.FullName <b>@String.Format("{0:F2}",Model.TutorHours)</b> שעות חניכה, מתוכן <b>@String.Format("{0:F2}",Model.TutorHoursBonding)</b> שעות חברותא</h4>
                </center>
            </div>
        }
    }


