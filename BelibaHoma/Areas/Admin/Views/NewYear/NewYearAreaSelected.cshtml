@model BelibaHoma.Areas.Admin.Models.TutorTraineeNewYearViewModel

@{
    ViewBag.Title = "NewYearAreaSelected";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    <link href="~/Content/Site.css" rel="stylesheet" />
}

@section scripts
{
    
<script src="~/Scripts/NewYearAreaSelected.js"></script>
}
@using (Html.BeginForm("NewYearAreaSelected", "NewYear"))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="Area" value="@Model.Area"/>

    <div class="form-horizontal" style="direction: rtl">
        <div class="form-horizontal" style="direction: rtl">
            <br>
            <div class="panel panel-default col-md-6 panel-height-match">
                <div id="trainees-partial" class="panel-body">
                    @Html.Partial("NewYearTraineeSelect", Model.Trainees)
                </div>
            </div>
            <div class="panel panel-default col-md-6 panel-height-match">
                <div id="tutors-partial" class="panel-body">
                    @Html.Partial("NewYearTutorSelect", Model.Tutors)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-6 col-md-6">
                <br/>
                <br/>
                <input type="submit" value="העבר לשנה הבאה" class="btn btn-info" id="manual-match-submit" style="margin-top: 30px; height: 50px" width="70px"/>
            </div>
        </div>
    </div>
}