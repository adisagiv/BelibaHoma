@using BelibaHoma.BLL.Enums
@using Extensions.Enums

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script src="~/Scripts/bootstrap-confirmation.js"></script>
}
@section styles
{
    <link href="~/Content/direction.css" rel="stylesheet" />
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal container well" style="direction: rtl">
        <div class="row  panel-body" align="right" style="margin-right: 10px">
            
            <div class="form-group">
                <select class="form-control" id="Area" name="Area" style="max-width: 350px">
                    @foreach (Area type in Enum.GetValues(typeof(Area)))
                    {
                        <option value="@type.ToString()">@type.ToDescription()</option>
                    }
                </select>
            </div>
            <div class="form-group">
                שים לב - התהליך הבא נועד לאיפוס חניכים וחונכים בתחילת שנת פעילות. תהליך זה משפיע על כלל המידע במערכת. לחץ אם ברצונך להמשיך
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="המשך" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
